<!DOCTYPE html>
<html>

<head>
  <style>
    /* Set the size of the div element that contains the map */
    #map {
      height: 400px;
      /* The height is 400 pixels */
      width: 100%;
      /* The width is the width of the web page */
    }
  </style>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>
  <!-- Main Jumbotron Content-->
  <div class="jumbotron text-center">
    <div class="container">
      <a href="/" class="restaurant-logo">
        <img src="/restaurant-logo.png">
      </a>
      <h1>Food Finder</h1>
      <p>Ever struggling to find somewhere to eat? Hate the inconvenience of having to make reservations? Food Finder
        shows you all restaurants near your location and allows you to make reservations nice and easy!</p>
      <label for="address">City:</label>
      <div id="locationField">
        <input type="text" class="form-control" id="autocomplete" placeholder="Enter City">
      </div>
    </div>
  </div>
  <!-- Map Container-->
  <div class="whytry">
    <div id="map"></div>

    <div id="listing">
      <table id="resultsTable">
        <tbody id="results"></tbody>
      </table>
    </div>
  </div>

  <!-- Content Display-->
  <div style="display: none">
    <div id="info-content">
      <table>
        <tr id="iw-url-row" class="iw_table_row">
          <td id="iw-icon" class="iw_table_icon"></td>
          <td id="iw-url"></td>
        </tr>
        <tr id="iw-address-row" class="iw_table_row">
          <td class="iw_attribute_name">Address:</td>
          <td id="iw-address"></td>
        </tr>
        <tr id="iw-phone-row" class="iw_table_row">
          <td class="iw_attribute_name">Telephone:</td>
          <td id="iw-phone"></td>
        </tr>
        <tr id="iw-rating-row" class="iw_table_row">
          <td class="iw_attribute_name">Rating:</td>
          <td id="iw-rating"></td>
        </tr>
        <tr id="iw-website-row" class="iw_table_row">
          <td class="iw_attribute_name">Website:</td>
          <td id="iw-website"></td>
        </tr>
      </table>
    </div>
  </div>
  <!-- Script Reference and API Key-->
  <script src="js/maps.js"></script>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA7kd_beDHhWfpMdLQmmyzhROakvpJuNKE&callback=initMap&libraries=places&callback=initMap"
    async defer></script>
</body>

</html>